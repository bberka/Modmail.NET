<RadzenRow class="rz-my-4">
    <RadzenSwitch Name="WithServerInfoFooter" @bind-Value="@Embed.WithServerInfoFooter"/>
    <RadzenLabel Component="WithServerInfoFooter">
        With Server Info Footer
    </RadzenLabel>
</RadzenRow>

<RadzenRow class="rz-my-4">
    <RadzenSwitch Name="WithTimestamp" @bind-Value="@Embed.WithTimestamp"/>
    <RadzenLabel Component="WithTimestamp">
        With Timestamp
    </RadzenLabel>
</RadzenRow>

@code {

    [Parameter]
    public required Embed Embed { get; set; }

    [Parameter]
    public EventCallback<Embed> EmbedChanged { get; set; }

    private async Task OnEmbedChanged()
    {
        await EmbedChanged.InvokeAsync(Embed);
    }

}