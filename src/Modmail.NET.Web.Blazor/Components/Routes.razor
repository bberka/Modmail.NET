@using Modmail.NET.Web.Blazor.Components.Layout
@using Modmail.NET.Web.Blazor.Components.Pages.Auth.Shared
<CascadingAuthenticationState>
  <Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
      <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(AuthLayout)">
        <NotAuthorized>
          @if (context.User.Identity?.IsAuthenticated != true) {
            <RedirectToLoginComponent/>
          }
          else {
            <RadzenText TextStyle="TextStyle.Subtitle1">
              @Lang.ErrorAuthForbidden.Translate()
            </RadzenText>
          }
        </NotAuthorized>
      </AuthorizeRouteView>
    </Found>
    <NotFound>
      <LayoutView Layout="@typeof(AuthLayout)">
        <RadzenText TextStyle="TextStyle.Subtitle1">
          @Lang.ErrorNotFound.Translate()
        </RadzenText>
      </LayoutView>
    </NotFound>
  </Router>
</CascadingAuthenticationState>

@code {

  [CascadingParameter]
  public required Task<AuthenticationState> Context { get; set; }

}

